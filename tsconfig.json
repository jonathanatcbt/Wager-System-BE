{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_module/@types", "./src/types"],
  },
  "include": ["src/**/*", "src/types/express/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
